<%- include('../partials/header.ejs')%>
<div class = "content">
    <h2>Welcome, <%=user.firstName%></h2>
    <%if(connections.length) {%>
        <p>You have created the following connections</p>
        <%connections.forEach(connection => {%>
            <a href = '/connections/<%= connection.id%>'><p><%=connection.title%></p></a>
        <%});
    } else {%>
        <p>You have not created any connections</p>
   <%}%>

   <%if(rsvps.length) {%>
    <h3>You have RSVP'd the following connections</h3>
    
    <%rsvps.forEach(rsvp => {%>
        <tr>
            <td><%=rsvp.connection.title%></td>
            <td><%=rsvp.rsvp%></td>
            <form>
                <td><button formmethod="get" formaction= "/connections/<%=rsvp.connection.id%>/">Edit</button></td>
                <td><button formmethod="post" formaction= "/connections/<%=rsvp.connection.id%>/rsvp?_method=DELETE">Delete</button></td>
            </form>
            
        </tr>
    <%});
} else {%>
    <p>You have not created any RSVPs</p>
<%}%>


    </div>
    <%- include('../partials/footer.ejs')%>